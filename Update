      }

      /* Available (green border) */
      .member-photo-container.present-border {
        border: 2px solid #10b981; /* Tailwind's emerald-500 */
      }

      /* Away (white border) */
      .member-photo-container.away-border {
        border: 2px solid #ffffff;
      }

        .member-photo {
          width: 100%;
